<Window x:Class="FileExplorer.ExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer"
        mc:Ignorable="d"
        Title="Explorer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Sidebar for Directories -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" Background="#EEE" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Stretch">
                <TextBlock Text="Quick Access" FontWeight="Bold" Margin="10"/>
                <ListBox Name="SidebarListBox" Margin="10" BorderThickness="0">
                    <ListBoxItem Content="Desktop" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="SidebarListBox_KeyDown"/>
                    <ListBoxItem Content="Documents" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="SidebarListBox_KeyDown"/>
                    <ListBoxItem Content="Downloads" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="SidebarListBox_KeyDown"/>
                    <ListBoxItem Content="Pictures" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="SidebarListBox_KeyDown"/>
                    <ListBoxItem Content="Music" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="SidebarListBox_KeyDown"/>
                    <ListBoxItem Content="Videos" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="SidebarListBox_KeyDown"/>
                </ListBox>

                <TextBlock Text="Drives" FontWeight="Bold" Margin="10,20,10,10"/>
                <ListBox Name="DrivesListBox" Margin="10" BorderThickness="0"  
                         MouseDoubleClick="DrivesListBox_SelectionChanged" KeyDown="DrivesListBox_KeyDown"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Top Navigation Bar -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#333" VerticalAlignment="Center" LastChildFill="True">
            <Button Content="Back" Width="50" Height="30" Margin="5" Foreground="White" Background="#555" Click="BackButton_Click"/>
            <Button Content="Forward" Width="50" Height="30" Margin="5" Foreground="White" Background="#555" Click="ForwardButton_Click"/>
            <Button Content="Up" Width="50" Height="30" Margin="5" Foreground="White" Background="#555" Click="UpButton_Click"/>
            <Button Content="Select" Width="50" Height="30" Margin="5" Foreground="White" Background="#555" Click="SelectButton_Click"/>

            <TextBox Name="PathTextBox" Width="600" Height="30" Margin="5" VerticalAlignment="Center" Background="#444" Foreground="White" BorderThickness="0" KeyDown="PathTextBox_KeyDown"/>
        </DockPanel>

        <!-- Main Content Area -->
        <ListView Name="FileListView" Grid.Row="1" Grid.Column="1" Background="White" BorderThickness="0" MouseDoubleClick="FileListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="32" Height="32" Margin="5"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                    <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="100"/>
                    <GridViewColumn Header="Date Modified" DisplayMemberBinding="{Binding DateModified}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Background="#DDD">
            <StatusBarItem Content="Selected Items: 0" Name="StatusSelectedItems"/>
            <StatusBarItem Content="Ongoing Operations: 0" HorizontalAlignment="Right" Name="StatusOperations"/>
        </StatusBar>
    </Grid>
</Window>
