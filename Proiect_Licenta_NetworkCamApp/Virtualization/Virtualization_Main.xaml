<UserControl x:Class="Proiect_Licenta_NetworkCamApp.Virtualization.Virtualization_Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Proiect_Licenta_NetworkCamApp.Virtualization"
      mc:Ignorable="d"
             
      
      d:DesignHeight="600" d:DesignWidth="1200">

    <!-- Main panel containing all elements -->
    <Grid>
        <!-- Main layout structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For navigation bar -->
            <RowDefinition Height="*"/>
            <!-- For content -->
            <RowDefinition Height="Auto"/>
            <!-- For status bar -->
        </Grid.RowDefinitions>

        <!-- Navigation bar -->
        <DockPanel Grid.Row="0" Background="#333" VerticalAlignment="Center" LastChildFill="True">
            <Button Content="Back" Width="70" Height="30" Margin="5" Foreground="White" Background="#555" Click="BackButton_Click"/>
            <Button Content="Forward" Width="70" Height="30" Margin="5" Foreground="White" Background="#555" Click="ForwardButton_Click"/>
            <Button Content="Up" Width="70" Height="30" Margin="5" Foreground="White" Background="#555" Click="UpButton_Click"/>
            <Button Content="Select" Width="70" Height="30" Margin="5" Foreground="White" Background="#555" Click="SelectButton_Click"/>
            <TextBox Name="PathTextBox" Width="600" Height="30" Margin="5" VerticalAlignment="Center" Background="#444" Foreground="White" BorderThickness="0" KeyDown="Main_KeyDown"/>
        </DockPanel>

        <!-- Main content area -->
        <ScrollViewer Grid.Row="1" Background="#EEE" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="FileListScrollViewer">
            <StackPanel Orientation="Horizontal">
                <!-- Sidebar panel -->
                <StackPanel VerticalAlignment="Stretch" Width="290" Name="UserPanel">
                    <TextBlock Text="Quick Access" FontWeight="Bold" Margin="10"/>
                    <ListBox Name="SidebarListBox" Margin="10" BorderThickness="0">
                        <ListBoxItem Content="Desktop" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="Main_KeyDown"/>
                        <ListBoxItem Content="Documents" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="Main_KeyDown"/>
                        <ListBoxItem Content="Downloads" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="Main_KeyDown"/>
                        <ListBoxItem Content="Pictures" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="Main_KeyDown"/>
                        <ListBoxItem Content="Music" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="Main_KeyDown"/>
                        <ListBoxItem Content="Videos" MouseDoubleClick="SidebarListBox_MouseDoubleClick" KeyDown="Main_KeyDown"/>
                    </ListBox>

                    <TextBlock Text="Drives" FontWeight="Bold" Margin="10,20,10,10"/>
                    <ListBox Name="DrivesListBox" Margin="10" BorderThickness="0" MouseDoubleClick="DrivesListBox_SelectionClick" KeyDown="Main_KeyDown"/>

                    <WrapPanel Height="70" Width="160" Margin="20,4,20,20" Background="Beige" Grid.ColumnSpan="2">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <Button x:Name="CreateVhdButton" Content="Crează Spațiu" Click="CreateVhdButton_Click" Width="137" Height="30"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <!-- File list -->
                <StackPanel Margin="10" HorizontalAlignment="Stretch">
                    <TextBlock Text="Your Header or Instructions" Margin="10"/>
                    <ListView Name="FileListView" Background="White" BorderThickness="0" Focusable="True"
                              MouseDoubleClick="FileListView_MouseDoubleClick" KeyDown="Main_KeyDown"
                              Margin="5,8,3,22" FocusVisualStyle="{x:Null}" SelectedIndex="0"
                              SelectionChanged="FileListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding Icon}" Width="32" Height="32" Margin="5"/>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                                <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                                <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="100"/>
                                <GridViewColumn Header="Date Modified" DisplayMemberBinding="{Binding DateModified}" Width="150"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Focusable" Value="True"/>
                                <Setter Property="IsHitTestVisible" Value="True"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                               
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status bar -->
        <StatusBar Grid.Row="2" Background="#DDD">
            <StatusBarItem Content="Selected Items: 0" Name="StatusSelectedItems"/>
            <StatusBarItem Content="Ongoing Operations: 0" HorizontalAlignment="Right" Name="StatusOperations"/>
        </StatusBar>
    </Grid>
</UserControl>
