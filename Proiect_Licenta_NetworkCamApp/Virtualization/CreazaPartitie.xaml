<UserControl x:Class="Proiect_Licenta_NetworkCamApp.Virtualization.CreazaPartitie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proiect_Licenta_NetworkCamApp.Virtualization"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    

    <Grid Margin="10" Background="Beige">
     <StackPanel Margin="50,30,50,400">
         <WrapPanel>
             <StackPanel Orientation="Horizontal">
                 <TextBlock Text="Maximum disk space in MB:" />
                 <TextBox Text="1006" IsReadOnly="True" Width="50" />
             </StackPanel>

             <StackPanel Orientation="Horizontal">
                 <TextBlock Text="Minimum disk space in MB:" />
                 <TextBox Text="8" IsReadOnly="True" Width="50" />
             </StackPanel>

             <StackPanel Orientation="Horizontal">
                 <TextBlock Text="Simple volume size in MB:" />
                 <TextBox Text="1006" IsReadOnly="True" Width="50">
                     <TextBox.InputBindings>
                         <!-- Ensure IncreaseValue and DecreaseValue are defined commands in your code-behind or ViewModel -->
                         <KeyBinding Key="Up" Command="{Binding IncreaseValue}" />
                         <KeyBinding Key="Down" Command="{Binding DecreaseValue}" />
                     </TextBox.InputBindings>
                 </TextBox>

                 <!-- Ensure IncreaseValue and DecreaseValue are defined commands in your code-behind or ViewModel -->
                 <Button Content="▲" Command="{Binding IncreaseValue}" />
                 <Button Content="▼" Command="{Binding DecreaseValue}" />
             </StackPanel>
         </WrapPanel>
     </StackPanel>

     <StackPanel Margin="24,66,-24,-66">

         <!-- Disk Path Input -->

         <!-- Drive Letter Options -->
         <TextBlock Text="Drive Letter Options:" FontWeight="Bold" Margin="0,10,0,0" />
         <RadioButton x:Name="AssignDriveLetterRadio" Content="Assign the following drive letter:" IsChecked="True" Checked="RadioButton_Checked" />
         <ComboBox x:Name="DriveLetterComboBox" Width="100" Margin="20,0,0,0" SelectionChanged="DriveLetterComboBox_SelectionChanged">
             <ComboBoxItem Content="D" />
             <ComboBoxItem Content="E" />
             <ComboBoxItem Content="F" />
             <!-- Adaugă mai multe litere dacă este necesar -->
         </ComboBox>

         <TextBlock Text="Disk Path:" FontWeight="Bold" />
         <TextBox x:Name="DiskPathTextBox" Width="200" />
         <RadioButton x:Name="MountInFolderRadio" Content="Mount in the following empty NTFS folder:" Checked="RadioButton_Checked" />
         <TextBox x:Name="FolderPathTextBox" Width="200" IsEnabled="False" Margin="20,0,0,0" />


         <RadioButton x:Name="NoDriveLetterRadio" Content="Do not assign a drive letter or drive path" Checked="RadioButton_Checked" />




         <!-- Formatting Options -->
         <TextBlock Text="Formatting Options:" FontWeight="Bold" Margin="0,10,0,0" />
         <CheckBox x:Name="DoNotFormatCheckBox" Content="Do not format this volume" />
         <TextBlock Text="File System:" Margin="0,5,0,0" />
         <ComboBox x:Name="FileSystemComboBox" Width="100">
             <ComboBoxItem Content="NTFS" IsSelected="True" />
             <ComboBoxItem Content="exFAT" />
             <ComboBoxItem Content="FAT32" />
         </ComboBox>
         <TextBlock Text="Allocation Unit Size:" Margin="0,5,0,0" />
         <ComboBox x:Name="AllocationUnitSizeComboBox" Width="100" SelectionChanged="AllocationUnitSizeComboBox_SelectionChanged">
             <ComboBoxItem Content="Default" IsSelected="True" />
             <TextBox x:Name="SimpleVolumeSizeTextBox" Width="50" Text="1006" />

             <ComboBoxItem Content="4096" />
             <ComboBoxItem Content="8192" />
             <!-- Add more sizes as needed -->
         </ComboBox>
         <TextBlock Text="Volume Label:" Margin="0,5,0,0" />
         <TextBox x:Name="VolumeLabelTextBox" Width="200" Text="New Volume" />
         <CheckBox x:Name="QuickFormatCheckBox" Content="Perform a quick format" IsChecked="True" />
         <CheckBox x:Name="EnableCompressionCheckBox" Content="Enable file and folder compression" />

         <!-- Action Button -->
         <Button x:Name="FormatButton" Content="Format Volume" Width="150" Margin="0,20,0,0" Click="FormatVolumeButton_Click" />
     </StackPanel>
 </Grid>
</UserControl>
