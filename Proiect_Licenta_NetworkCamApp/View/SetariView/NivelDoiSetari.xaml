<Page x:Class="Proiect_Licenta_NetworkCamApp.View.SetariView.NivelDoiSetari"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proiect_Licenta_NetworkCamApp.View.SetariView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NivelDoiSetari">

    <Grid >
        <!-- Define the layout here based on the screenshot -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- UI Components to Mimic the Settings Page -->
        <StackPanel Background="White">
            <TextBlock Text="System Settings" FontSize="20" FontWeight="Bold" Margin="20" />
            <!-- Add other controls like in the image -->
        </StackPanel>

        <VirtualizingStackPanel Background="#f7f0ed" Margin="0,62,0,65"/>
        <!-- Language Selection -->
        <Label Content="Language" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,106,0,0" />
        <ComboBox SelectedItem="{Binding SelectedLanguage}" 
                  ItemsSource="{Binding AvailableLanguages}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="200" Margin="10,133,0,0"/>

        <!-- Time Zone Selection -->
        <Label Content="Time Zone" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,160,0,0"/>
        <ComboBox SelectedItem="{Binding SelectedTimeZone}" 
                  ItemsSource="{Binding AvailableTimeZones}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="200" Margin="10,186,0,0"/>

        <!-- Date Format Selection -->
        <Label Content="Date Format" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,208,0,0"/>
        <ComboBox SelectedItem="{Binding SelectedDateFormat}" 
                  ItemsSource="{Binding AvailableDateFormats}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="200" Margin="10,236,0,0"/>

        <!-- System Date -->
        <Label Content="System Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="301,62,0,0" RenderTransformOrigin="0.008,0.716"/>
        <TextBox Text="{Binding SystemDate}" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Width="200" Margin="304,88,0,0"/>

        <!-- System Time -->
        <Label Content="System Time" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,111,0,0"/>
        <TextBox Text="{Binding SystemTime}" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Width="200" Margin="304,133,0,0" TextChanged="TextBox_TextChanged"/>

        <!-- Device Name -->
        <Label Content="Device Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,156,0,0"/>
        <TextBox Text="{Binding DeviceName}" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Width="200" Margin="302,186,0,0"/>

        <!-- Device Number -->
        <Label Content="Device No." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,207,0,0"/>
        <TextBox Text="{Binding DeviceNo}" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Width="200" Margin="304,233,0,0"/>

        <!-- Auto Log Out -->
        <Label Content="Auto Log Out" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="301,256,0,0" RenderTransformOrigin="0.432,0.015"/>
        <TextBox Text="{Binding AutoLogOut}" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Width="196" Margin="304,287,0,0" TextChanged="TextBox_TextChanged_1"/>

        <!-- Menu Output Mode -->
        <Label Content="Menu Output Mode" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="304,310,0,0"/>
        <ComboBox SelectedItem="{Binding SelectedMenuOutputMode}" 
                  ItemsSource="{Binding AvailableMenuOutputModes}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="176" Margin="304,341,0,0" SelectionChanged="ComboBox_SelectionChanged"/>

        <!-- Enable Wizard -->
        <CheckBox Content="Enable Wizard" 
                  IsChecked="{Binding EnableWizard}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Margin="667,341,0,0"/>

        <!-- Enable Password -->
        <CheckBox Content="Enable Password" 
                  IsChecked="{Binding EnablePassword}" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Margin="520,344,0,0"/>

        <!-- Apply Button -->
        <Button Content="Apply" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" />

    </Grid>
</Page>
