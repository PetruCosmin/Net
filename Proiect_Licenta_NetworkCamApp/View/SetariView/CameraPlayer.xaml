<UserControl x:Class="Proiect_Licenta_NetworkCamApp.View.SetariView.CameraPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Proiect_Licenta_NetworkCamApp.View.SetariView"
             mc:Ignorable="d"
             Background="Azure"
             Height="450" Width="800">
    <Grid Background="Bisque">
        <!-- Definire coloane pentru layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Conținut principal -->
            <ColumnDefinition Width="150" />
            <!-- WrapPanel în partea dreaptă -->
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="40" Background="Black">
            <Button Content="Play" Width="50" Click="PlayButton_Click"/>
            <Button Content="Pause" Width="50" Click="PauseButton_Click"/>
            <Button Content="Stop" Width="50" Click="StopButton_Click"/>
            <Button Content="Download" Width="75" Click="DownloadButton_Click"/>

            <Slider Name="ProgressSlider" Width="350" Margin="10,0,10,0" ValueChanged="ProgressSlider_ValueChanged"/>

            <TextBlock Name="TimeTextBlock" Foreground="White" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Conținut principal -->
        <MediaElement Name="CameraMediaElement" LoadedBehavior="Manual" UnloadedBehavior="Stop" 
                      Stretch="Uniform" Grid.Column="0" Margin="10" />

        <!-- WrapPanel pentru lista de camere -->
        <WrapPanel Name="CameraListPanel" Orientation="Vertical" Background="DarkCyan"
                   Grid.Column="1" VerticalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Margin="100,0,0,0">
                <Button VerticalAlignment="Center" Click="Videolist_Click" Margin="0,0,0,0">
                    <Image Source="C:\Users\Administrator\source\repos\Proiect_Licenta_NetworkCamApp\Proiect_Licenta_NetworkCamApp\Resources\Image\Camera_Settings_image3.png" 
                           Width="50" Height="50" Margin="0"/>
                </Button>
            </StackPanel>
        </WrapPanel>
    </Grid>
</UserControl>
