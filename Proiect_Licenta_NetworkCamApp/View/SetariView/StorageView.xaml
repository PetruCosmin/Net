<UserControl x:Class="Proiect_Licenta_NetworkCamApp.View.SetariView.StorageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proiect_Licenta_NetworkCamApp.View.SetariView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke" >

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">


            <TextBlock Text="Cameras" FontSize="16" FontWeight="Bold" Margin="10,10,0,5"/>
            <ProgressBar Value="{Binding CameraStorageUsage}" Width="350" Height="20" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding Cameras}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Width="200"/>
                            <ProgressBar Value="{Binding Usage}" Width="100" Height="20" Margin="5,0"/>
                            <TextBlock Text="{Binding Size}" Width="50"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Storage Usage" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Local Disk (C:)" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <TextBlock Margin="10,0">
                    <Run Text="Used: "/>
                    <Run Text="{Binding UsedStorage}"/>
                </TextBlock>
                <TextBlock Margin="10,0">
                    <Run Text="Free:"/>
                    <Run Text="{Binding FreeStorage}"/>
                </TextBlock>


            </StackPanel>


            <TextBlock FontSize="16" FontWeight="Bold" Margin="10,100,0,5"/>

            <ListBox>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Camera 1" Width="200"/>
                        <ProgressBar Value="{Binding Camera1}" Width="100" Height="20" Margin="5,0"/>
                        <TextBlock Text="{Binding Size}" Width="50"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Camera 2" Width="200"/>
                        <ProgressBar Value="{Binding Camera1}" Width="100" Height="20" Margin="5,0"/>
                        <TextBlock Text="{Binding Size}" Width="50"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Camera 3" Width="200"/>
                        <ProgressBar Value="{Binding Camera1}" Width="100" Height="20" Margin="5,0"/>
                        <TextBlock Text="{Binding Size}" Width="50"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
