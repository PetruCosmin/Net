<UserControl x:Class="Proiect_Licenta_NetworkCamApp.View.SetariView.CameraControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
   

    <Grid Background="#ECEFF1">
        <!-- Border exterior pentru aspect modern -->
        <Border Background="White"
                CornerRadius="10"
                BorderBrush="#D1D9E6"
                BorderThickness="2"
                Padding="10"
                Margin="20">
            <Grid>
                <!-- Nume cameră centrat -->
                <TextBlock Text="Setări Cameră"
                           FontSize="24"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Foreground="#546E7A"
                           Margin="0,65,0,20"/>
                <!-- Nume cameră în colțul din dreapta sus cu margine dublă -->
                <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                    
                    <Grid>
                        <!-- Prima margine -->
                        <Border BorderBrush="#49FFFFFF" BorderThickness="1,1,0,0" />
                        <!-- A doua margine -->
                        <Border BorderBrush="#49000000" BorderThickness="0,0,1,1">
                            <TextBlock x:Name="CameraNameTextBlock"
                                       Text="{Binding DisplayName_ID, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       FontSize="18"
                                       FontWeight="Bold"              
                                       Margin="0,0,10,0"
                                       Foreground="#37474F"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"             
                                       Padding="5"/>
                        </Border>
                    </Grid>

                </Border>

               

                <!-- Linie decorativă -->
                <Line X1="0" Y1="0" X2="700" Y2="0"
                      Stroke="#B0BEC5"
                      StrokeThickness="2"
                      VerticalAlignment="Center"
                      Margin="20,-330,0,0"/>

                <!-- Introducerea numelui camerei -->
                <WrapPanel Margin="30,120,0,0">
                    <TextBlock Text="Nume Camera:" FontSize="14" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding CameraName_Control, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" 
                             Height="30" 
                             Margin="10,0,10,0" 
                             FontSize="14" 
                             TextChanged="TextBox_TextChanged"/>


                </WrapPanel>
                <WrapPanel Margin="30,230,0,0">
                    <TextBlock Text="Frame"/>
                    <Border BorderBrush="#49FFFFFF" BorderThickness="1,1,0,0" Margin="20" />
                    <Border BorderBrush="#49000000" BorderThickness="0,0,1,1">
                        <TextBlock Text="{Binding CurrentFrame}"
                               
                        FontSize="14" 
                        Margin="30,10,0,0"/>
                    </Border>

                </WrapPanel>

                <!-- WrapPanel pentru setări suplimentare -->
                <WrapPanel Margin="30,165,0,0">
                    <!-- Rezoluție -->
                    <TextBlock Text="Rezoluție:" FontSize="14" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Resolutions}" 
                              SelectedItem="{Binding SelectedResolution, UpdateSourceTrigger=PropertyChanged}"
                              Width="150" Height="30" Margin="10,0,10,0" FontSize="14"/>

                    <!-- Contrast -->
                    <TextBlock Text="Contrast:" FontSize="14" Margin="0,0,10,0"/>
                    <Slider Minimum="0" Maximum="100" Width="150" Margin="10,0,10,0"/>

                    <!-- Zoom -->
                    <TextBlock Text="Zoom:" FontSize="14" Margin="0,0,10,0"/>
                    <Slider Minimum="1" Maximum="10" Width="150" Margin="10,0,10,0"/>
                </WrapPanel>
                
                <!-- Buton de salvare -->
                <Button Content="Salvează Setările"
                        Click="OnSaveSettingsClick"
                        Width="200"
                        Height="40"
                        Margin="0,350,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding SaveSettingsCommand }"
                        
                        />

                <!-- Nume cameră centrat -->
                <TextBlock Text="{Binding CameraName}"
                            FontSize="24"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#546E7A" /> 
            </Grid>
        </Border>
    </Grid>
</UserControl>
